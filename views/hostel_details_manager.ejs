<%- include('./includes/head.ejs') %>
<style>
    .carousel-item{
        max-height: 230px;
    }
    .rate {
        float: left;
        height: 46px;
        padding: 0 10px;
    }
    .rate:not(:checked) > input {
        position:absolute;
        top:-9999px;
    }
    .rate:not(:checked) > label {
        float:right;
        width:1em;
        overflow:hidden;
        white-space:nowrap;
        cursor:pointer;
        font-size:30px;
        color:#ccc;
    }
    .rate:not(:checked) > label:before {
        content: 'â˜… ';
    }
    .rate > input:checked ~ label {
        color: #ffc700;    
    }
    .rate:not(:checked) > label:hover,
    .rate:not(:checked) > label:hover ~ label {
        color: #deb217;  
    }
    .rate > input:checked + label:hover,
    .rate > input:checked + label:hover ~ label,
    .rate > input:checked ~ label:hover,
    .rate > input:checked ~ label:hover ~ label,
    .rate > label:hover ~ input:checked ~ label {
        color: #c59b08;
    }

</style>
<link rel="stylesheet" type="text/css" href="../public/css/rating.css">
</head>
<body>
<%- include('./includes/navigation.ejs') %>
<br>


<div class="container emp-profile">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <%for(var i=0, len=pics.length; i<len; i++){%>
                            <%if (i==0){%>
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <%}else{%>
                                <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>"></li>
                            <%}%>
                        <%}%>
                    </ol>
                    <div class="carousel-inner">
                        <%for(var i=0, len=pics.length; i<len; i++){%>
                            <%if (i==0){%>
                                <div class="carousel-item active">
                            <%}else{%>
                                <div class="carousel-item">
                            <%}%>
                                <img class="d-block w-100" src="<%=pics[i].photo%>" alt="<%=info.building_name%>">
                            </div>
                        <%}%>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>         
        <div class="col-md-6">
            <div class="profile-head">
                        <h5>
                            <%=info.building_id%> : <%=info.building_name%>
                        </h5>
                        <h6>
                            <%=info.addr%>
                        </h6>
                        <h6>
                            Average Rating: <%=rating%>/5
                        </h6>
                        <h6>
                            Owner: <%=info.name%>
                        </h6>
                        <h6>
                            Owner phone: <%=info.phone_number%>
                        </h6>
                        <h6>
                            <%=info.email_id%>
                        </h6>
                        <br>
            </div>
        </div>
        <h6>
            <br><br>
            About:<%=info.additional_info%>/5
        </h6>
    </div>
    <div class="main-body">
        <hr>
          <h3 class="text-center">Room Type Details</h3>
          <hr>
          <div style="padding-bottom: 20px;
              max-height: 50vh;
              overflow-x: hidden;
              overflow-y: auto;
              text-align:justify;">

            <% if (num_rooms_type===0) {%>
              <br>
              <h5>No rooms type to show!</h5>
              <% }%>

                <% rooms_type.forEach((item)=>{%>
                 
                    <div class="card">
                      
                            <div class="card-body">
                              <h5 class="card-title">
                                <%=item.rooms_type_id%>
                                    
                              </h5>
                              
                              <p>
                                Rent: <%=item.rent%>
                              </p>
                            <p>
                                Number of Beds: <%=item.num_beds%>
                            </p>
                            <p>
                                AC: <%=item.ac%>
                            </p>
                              
                            </div><br>
                        </div>
                        <br>
                        <%});%>

                    </div>
                </div>
</div>
<%- include('./includes/end.ejs') %>