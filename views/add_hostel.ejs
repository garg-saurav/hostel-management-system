<%- include('./includes/head.ejs') %>
<script>
    var all_names = [];
    var all_rates = [];
    function addItem(){
        var present = false;
        var ul = document.getElementById("dynamic-list");
        var servicename = document.getElementById("servicename");
        var servicerate = document.getElementById("servicerate");
        if(!servicename.value || !servicerate.value){
            return;
        }
        for(var i=0; i<all_names.length; i++){
            if(all_names[i]==servicename.value){
                present = true;
                break;
            }
        }
        if(!present){
            var li = document.createElement("li");
            li.setAttribute('id',servicename.value);
            li.appendChild(document.createTextNode(servicename.value+" - Rs. "+servicerate.value+" pm"));
            ul.appendChild(li);
            all_names.push(servicename.value);
            all_rates.push(servicerate.value);
            var inp1 = document.getElementById("servicenames");
            var inp2 = document.getElementById("servicerates");
            inp1.setAttribute('value',JSON.stringify(all_names));
            inp2.setAttribute('value',JSON.stringify(all_rates));
            console.log(all_names);
        }
    }

    function removeItem(){
        var present = false;
        var index = null;
        var ul = document.getElementById("dynamic-list");
        var servicename = document.getElementById("removeservicename");
        if(!servicename.value){
            return;
        }
        for(var i=0; i<all_names.length; i++){
            if(all_names[i]==servicename.value){
                present = true;
                index = i;
                break;
            }
        }
        if(present){
            var item = document.getElementById(servicename.value);
            ul.removeChild(item);
            all_names.splice(index, 1);
            all_rates.splice(index, 1);
            var inp = document.getElementById("services");
            var inp1 = document.getElementById("servicenames");
            var inp2 = document.getElementById("servicerates");
            inp1.setAttribute('value',JSON.stringify(all_names));
            inp2.setAttribute('value',JSON.stringify(all_rates));
        }
    }
</script>
</head>
