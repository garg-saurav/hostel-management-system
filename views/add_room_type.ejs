<%- include('./includes/head.ejs') %>
    </head>

    <body>
        <%- include('./includes/navigation.ejs') %>
        <div class="container">
            <div class="col-sm-6 col-sm-offset-3">
        
                <h1><span class="fa"></span> Add Room Type</h1>
        
                <!-- ADD Room Type FORM -->
                <form action="/owner/hostel/add_room_type" method="POST">
                    <input name="building_id" type="hidden" value="<%=info.building_id%>">
                    <div class="form-group">
                        <label>Enter Rent</label>
                        <input type="text" class="form-control" name="rent" required>
                    </div>
                    <div class="form-group">
                        <label>Enter Num Beds</label>
                        <input type="text" class="form-control" name="num_beds" required>
                    </div>
                    <div class="form-group">
                        <select name="ac_or_non_ac">
                            <option value="ac">AC</option>
                            <option value="non_ac">Non-AC</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-warning btn-lg">Add Room Type</button>
                </form>
        
                <hr>
        
            </div>
        </div>
        <%- include('./includes/end.ejs') %>