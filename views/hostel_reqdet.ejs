<%- include('./includes/head.ejs') %>
<style>
    .carousel-item{
        max-height: 230px;
    }
    .rate {
        float: left;
        height: 46px;
        padding: 0 10px;
    }
    .rate:not(:checked) > input {
        position:absolute;
        top:-9999px;
    }
    .rate:not(:checked) > label {
        float:right;
        width:1em;
        overflow:hidden;
        white-space:nowrap;
        cursor:pointer;
        font-size:30px;
        color:#ccc;
    }
    .rate:not(:checked) > label:before {
        content: 'â˜… ';
    }
    .rate > input:checked ~ label {
        color: #ffc700;    
    }
    .rate:not(:checked) > label:hover,
    .rate:not(:checked) > label:hover ~ label {
        color: #deb217;  
    }
    .rate > input:checked + label:hover,
    .rate > input:checked + label:hover ~ label,
    .rate > input:checked ~ label:hover,
    .rate > input:checked ~ label:hover ~ label,
    .rate > label:hover ~ input:checked ~ label {
        color: #c59b08;
    }

</style>
<link rel="stylesheet" type="text/css" href="../public/css/rating.css">
</head>
<body>
<%- include('./includes/navigation.ejs') %>
<br>


<div class="container emp-profile">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <%for(i=0, len=pics.length; i<len; i++){%>
                            <%if (i==0){%>
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <%}else{%>
                                <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>"></li>
                            <%}%>
                        <%}%>
                    </ol>
                    <div class="carousel-inner">
                        <%for(i=0, len=pics.length; i<len; i++){%>
                            <%if (i==0){%>
                                <div class="carousel-item active">
                            <%}else{%>
                                <div class="carousel-item">
                            <%}%>
                                <img class="d-block w-100" src="<%=pics[i].photo%>" alt="<%=info.building_name%>">
                            </div>
                        <%}%>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>         
        <div class="col-md-6">
            <div class="profile-head">
                <h5>
                    <%=info.request_id%> : <%=info.building_name%>
                </h5>
                <h6>
                    <%=info.addr%>
                </h6>
                <br>
                <form action="/manager/hostel_reqdet" method="post">
                    <input name="request_id" type="hidden" value="<%=info.request_id%>">
                    <div class="form-group">
                        <label>Enter Comment</label>
                        <input type="text" class="form-control" name="comment" required>
                    </div> <br>
                    <div class="form-group">
                        <select name="approve_or_reject">
                            <option value="approve">Approve</option>
                            <option value="reject">Reject</option>
                        </select>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-warning btn-lg">Submit</button>
                </form>
            </div>
        </div>
    </div>
    
    <br>
    
</div>
<%- include('./includes/end.ejs') %>