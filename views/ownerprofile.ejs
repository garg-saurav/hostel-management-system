<%- include('./includes/head.ejs') %>
  <link rel="stylesheet" href="../public/css/profile.css">
  </head>

  <body>
    <%- include('./includes/navigation.ejs') %>
      <br>
      <div class="container">
        <div class="main-body">
          <form action="/logout" method="POST">
            <input type="submit" class="btn btn-danger float-right" value="Logout"></input>
          </form>
          <%if(!has_other_role){%>
            <form action="/reguser" method="POST">
              <input type="submit" class="btn btn-primary float-right" style="margin-right: 10px;" value="Register as customer"></input>
            </form>
          <%}%>
          <br><br>
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img style="border-radius: 30%;" src="https://bootdey.com/img/Content/avatar/avatar7.png"
                      alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4>
                        <%= name%>
                      </h4>
                      <!-- <p class="text-muted font-size-sm"><%= email_id %></p> -->
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= email_id %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= phone_no %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Date of birth</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= dob %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= addr %>
                    </div>
                  </div>
                </div>
              </div><br>
            </div>
          </div>

          </script>
  </body>