<%- include('./includes/head.ejs') %>
<style>
    .carousel-item{
        max-height: 230px;
    }
    .rate {
        float: left;
        height: 46px;
        padding: 0 10px;
    }
    .rate:not(:checked) > input {
        position:absolute;
        top:-9999px;
    }
    .rate:not(:checked) > label {
        float:right;
        width:1em;
        overflow:hidden;
        white-space:nowrap;
        cursor:pointer;
        font-size:30px;
        color:#ccc;
    }
    .rate:not(:checked) > label:before {
        content: 'â˜… ';
    }
    .rate > input:checked ~ label {
        color: #ffc700;    
    }
    .rate:not(:checked) > label:hover,
    .rate:not(:checked) > label:hover ~ label {
        color: #deb217;  
    }
    .rate > input:checked + label:hover,
    .rate > input:checked + label:hover ~ label,
    .rate > input:checked ~ label:hover,
    .rate > input:checked ~ label:hover ~ label,
    .rate > label:hover ~ input:checked ~ label {
        color: #c59b08;
    }

</style>
<link rel="stylesheet" type="text/css" href="../public/css/rating.css">
</head>
<body>
<%- include('./includes/navigation.ejs') %>
<br>


<div class="container emp-profile">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <%for(i=0, len=pics.length; i<len; i++){%>
                            <%if (i==0){%>
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <%}else{%>
                                <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>"></li>
                            <%}%>
                        <%}%>
                    </ol>
                    <div class="carousel-inner">
                        <%for(i=0, len=pics.length; i<len; i++){%>
                            <%if (i==0){%>
                                <div class="carousel-item active">
                            <%}else{%>
                                <div class="carousel-item">
                            <%}%>
                                <img class="d-block w-100" src="<%=pics[i].photo%>" alt="<%=info.building_name%>">
                            </div>
                        <%}%>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>         
        <div class="col-md-6">
            <div class="profile-head">
                        <h5>
                            <%=info.booking_id%> : <%=info.building_name%>
                        </h5>
                        <h6>
                            <%=info.addr%>
                        </h6>
                        <br>
                        <%if(!info.has_ended){%>
                            <form action="/customer/bookingdetails/modify_booking" method="POST">
                                <input name="booking_id" type="hidden" value="<%=info.booking_id%>">
                            <button type="submit" class="btn btn-warning">Modify booking</button><br><br>
                            </form>
                        <%}%>
                        <%if(!info.has_started){%>
                            <form action="/customer/bookingdetails/cancel_booking" method="POST">
                                <input name="booking_id" type="hidden" value="<%=info.booking_id%>">
                            <button type="submit" class="btn btn-danger">Cancel booking</button>
                            </form>
                        <%}%>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-6">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Booking details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Room details</a>
                </li>
            </ul>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Start date</label>
                        </div>
                        <div class="col-md-6">
                            <p><%=info.start_date%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>End date</label>
                        </div>
                        <div class="col-md-6">
                            <p><%=info.end_date%></p>
                        </div>
                    </div>
                    <%if(info.has_started){%>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Your rating</label>
                            </div>
                            <div class="col-md-6">
                                <%if(info.rating){%>
                                    <label><%=info.rating%>/5</label>
                                <%}else{%> 
                                    <form action="/customer/bookingdetails/add_rating" method="POST">
                                    <input name="booking_id" type="hidden" value="<%=info.booking_id%>">
                                    <div class="rate">
                                        <input type="radio" id="star5" name="rate" value="5" />
                                        <label for="star5" title="text">5 stars</label>
                                        <input type="radio" id="star4" name="rate" value="4" />
                                        <label for="star4" title="text">4 stars</label>
                                        <input type="radio" id="star3" name="rate" value="3" />
                                        <label for="star3" title="text">3 stars</label>
                                        <input type="radio" id="star2" name="rate" value="2" />
                                        <label for="star2" title="text">2 stars</label>
                                        <input type="radio" id="star1" name="rate" value="1" />
                                        <label for="star1" title="text">1 star</label>
                                    </div>
                                    &nbsp;<button type="submit" class="btn btn-primary">Add rating</button><br><br></label>
                                    </form>
                                <%}%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Your review</label>
                            </div>
                            <div class="col-md-6">
                                <%if(info.review){%>
                                    <label><%=info.review%></label>
                                <%}else{%> 
                                    <label>
                                        <form action="/customer/bookingdetails/add_review" method="POST">
                                        <div class="input-group">
                                            <textarea class="form-control" aria-label="With textarea" name="review"></textarea>
                                            <input name="booking_id" type="hidden" value="<%=info.booking_id%>">
                                            <div class="input-group-append">
                                                <button type="submit" class="btn btn-primary">Add review</button>
                                            </div>
                                            
                                        </div>
                                        </form>
                                        <br><br></label>
                                <%}%>
                            </div>
                        </div>
                    <%}%>
                    <div class="row">
                        <div class="col-md-6">
                            <label>City</label>
                        </div>
                        <div class="col-md-6">
                            <p><%=info.city%></p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Room number</label>
                        </div>
                        <div class="col-md-6">
                            <p><%=info.room_no%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Monthly rent</label>
                        </div>
                        <div class="col-md-6">
                            <p>Rs. <%=info.rent%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>No. of beds</label>
                        </div>
                        <div class="col-md-6">
                            <p><%=info.num_beds%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>AC room</label>
                        </div>
                        <div class="col-md-6">
                            <%if(info.ac){%>
                                <label>Yes</label>
                            <%}else{%>
                                <label>No</label>
                            <%}%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>
<%- include('./includes/end.ejs') %>